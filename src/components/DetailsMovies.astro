---
import CategoriesButtons from "./CategoriesButtons.astro";
import ExtraDetailsMovie from "./ExtraDetailsMovie.astro";

interface Props {
  img: string;
  title: string;
  average: string;
  alt: string;
  overview: string;
  runtime: string;
  realeaseDate: any;
  genres: Object[];
}

const { img, title, average, alt, overview, runtime, realeaseDate, genres } =
  Astro.props;
---

<section id="movie" class="bg-bg-300 h-auto w-full flex flex-col">
  <img
    src={`https://image.tmdb.org/t/p/w400${img}`}
    alt={alt}
    class="w-full object-cover"
  />
  <div class="flex flex-col justify-between p-4 gap-5">
    <div class="flex flex-col gap-3">
      <h2 class="text-4xl font-bold">
        {title}
      </h2>
      <ExtraDetailsMovie
        average={average}
        runtime={runtime}
        realeaseDate={realeaseDate}
      />
      <div class="flex flex-wrap gap-1">
        {
          genres.map((genre: any) => {
            return <CategoriesButtons id={genre.id} text={genre.name} />;
          })
        }
      </div>
    </div>
    <div class="flex flex-col gap-3">
      <h3 class="text-2xl font-bold">Overview</h3>
      <p class="text-lg">{overview}</p>
    </div>
  </div>
</section>
