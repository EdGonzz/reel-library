---
import type { Result } from "@/types/apiSimilarMovies";

interface Props {
  similarMovies: Object[];
}

const { similarMovies } = Astro.props;
---

<section class="flex flex-col gap-5 bg-bg-300 px-4 md:px-6">
  <h3 class="text-2xl font-bold">Similar Movies</h3>
  <div
    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4"
  >
    {
      similarMovies.map((movie: Object) => (
        <a href={`/movie/${(movie as Result).id}`}>
          <article class="flex flex-col gap-3">
            <img
              src={`https://image.tmdb.org/t/p/w500${(movie as Result).poster_path}`}
              alt={(movie as Result).title}
              class="w-full object-contain rounded-lg"
            />
            <h3 class="text-xl font-bold text-balance">
              {(movie as Result).title}
            </h3>
          </article>
        </a>
      ))
    }
  </div>
</section>
