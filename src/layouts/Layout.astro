---
import "@/styles/global.css";
import Nav from "@/components/Nav.astro";
import Footer from "@/components/Footer.astro";
import { ClientRouter } from "astro:transitions";

export interface Props {
  title: string;
  description: string;
  keywords?: string;
  canonical?: string;
}

const { title, description, keywords, canonical } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- SEO -->
    <meta name="description" content=`${description}` />
    <meta name="keywords" content=`${keywords}` />
    <meta name="author" content="Edwin Contraras" />
    <meta name="application-name" content="ReelLibrary" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href=`${canonical}` />

    <!-- Open Graph -->
    <meta property="og:title" content="ReelLibrary" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://reel-library.vercel.app/" />
    <meta
      property="og:image"
      content="https://raw.githubusercontent.com/EdGonzz/reel-library/refs/heads/main/public/mobile-mockup.webp"
    />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:igame:alt" content="ReelLibrary mobile page" />
    <meta property="og:description" content=`${description}` />
    <meta property="og:site_name" content="ReelLibrary" />

    <!-- Open Graph (Twitter) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@Ed_Gonzz_" />
    <meta name="twitter:creator" content="@Ed_Gonzz_" />
    <meta property="twitter:domain" content="edgonzz.github.io" />
    <meta name="twitter:title" content="ReelLibrary" />
    <meta name="twitter:url" content="https://reel-library.vercel.app/" />
    <meta
      name="twitter:image"
      content="https://raw.githubusercontent.com/EdGonzz/reel-library/refs/heads/main/public/desktop-mockup.webp"
    />
    <meta name="twitter:image:alt" content="ReelLibrary desktop page" />
    <meta name="twitter:description" content=`${description}` />

    <ClientRouter />
  </head>
  <body>
    <Nav />
    <main>
      <slot />
    </main>
    <Footer />
  </body><style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      background-color: var(--color-bg-300);
    }
  </style>
</html>
